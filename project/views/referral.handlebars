<div class="container">
    <h1>Referral Form</h1>
    <p class="text-muted">Fill out this form to assign a student lunch detention.</p>

    <form action="" method="" class="referralForm">
        <legend>Student Information:</legend>
        <div class="row">
            <div class="form-group col-md-5">
                <label for="stud-firstName">Student First Name</label>
                <input type="text" class="form-control" id="stud-firstName" name="StudFirstName" placeholder="Taylor" required>
            </div>
            <div class="form-group col-md-5">
                <label for="stud-lastName">Student Last Name</label>
                <input type="text" class="form-control" id="stud-lastName" placeholder="Doe" required>
            </div>
            <div class="form-group col-md-2">
                <label for="stud-grade">Student Grade</label>
                <input type="number" class="form-control" id="stud-grade" placeholder="7" min="5" max="12" required>
            </div>
        </div>
        <legend>Teacher Information:</legend>
        <div class="row">
            <div class="form-group col-md-4">
                <label for="teach-firstName">Teacher First Name</label>
                <input type="text" class="form-control" id="teach-firstName" placeholder="Jane" required>
            </div>
            <div class="form-group col-md-4">
                <label for="teach-lastName">Teacher Last Name</label>
                <input type="text" class="form-control" id="teach-lastName" placeholder="Doe" required>
            </div>
            <div class="form-group col-md-4">
                <label for="teach-email">Teacher Email</label>
                <input type="email" class="form-control" id="teach-email" placeholder="jane.doe@skool.edu">
            </div>
        </div>
        <legend>Referral Information:</legend>
        <div class="row">
            <div class="form-group col-md-4">
                
                <label for="refer-reason">Reason Referred</label><br>
                <select id="refer-reason" name="refer-reason" class="custom-select" required>
                    <option value="" disabled selected>Please select...</option>
                    <option value="PHONE">Using phone in class</option>
                    <option value="TALKING">Excessive talking</option>
                    <option value="BACK_TALK">Talking back</option>
                    <option value="HOMEWORK">Incomplete homework</option>
                    <option value="TARDY">Tardiness</option>
                </select>
            </div>
            <div class="form-group col-md-4">
                <label for="refer-date">Date Referred</label>
                <input type="date" class="form-control" id="refer-date" placeholder="11/12/2019" required>
            </div>
            <div class="form-group col-md-4">
                <label for="serve-date">Serve Date</label>
                <input type="date" class="form-control" id="serve-date" placeholder="11/12/2019" required>
            </div>
        </div>
        <div class="form-group" >
            <label for="refer-other">Please elaborate:</label>
            <textarea class="form-control rounded-0" id="refer-other" rows="3" placeholder="Message" required></textarea>
        </div>
        
        
        <button class="btn btn-info my-4 btn-block" type="submit" onclick="refSubmit()">Submit</buttom>
    </form>
</div>
