<form method="" action="/update">
    <legend>Exercise Information:</legend>
    <div class="row">
        <input type="text" class="form-control" style="display: none;" name="id" value="{{id}}" required>

        <div class="form-group col-md-6">
            <label for="lastName">Name</label>
            <input type="text" class="form-control" name="name" value="{{name}}" required>
        </div>
        <div class="form-group col-md-6">
            <label for="date">Date</label>
            <input type="date" class="form-control" name="date" value="{{date}}" required>
        </div>
        <div class="form-group col-md-6">
            <label for="stud-grade">Weight Used</label>
            <input type="number" class="form-control" name="weight" value="{{weight}}" required>
        </div>
        <div class="form-group col-md-3">
            <label for="reps">Reps</label>
            <input type="number" class="form-control" name="reps" value="{{reps}}" required>
        </div>
        <div class="form-group col-md-3">
            <label for="unit">Unit</label><br>
            <label for="lbs">lbs <input type="radio" name="lbs" value="true" {{#if lbs}} checked {{/if}}></label>
            <label for="kg">kg <input type="radio" name="lbs" value="false" {{#unless lbs}} checked {{/unless}}></label>
        </div>
    </div>
    
    <button class="btn btn-info my-4 btn-block" id="submit" type="submit" onclick="">Submit</buttom>
</form>
