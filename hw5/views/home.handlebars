<div>
    <form method="" class="">
        <legend>Exercise Information:</legend>
        <div class="row">
            <div class="form-group col-md-6">
                <label for="lastName">Name</label>
                <input type="text" class="form-control" id="name" placeholder="Doe" required>
            </div>
            <div class="form-group col-md-6">
                <label for="refer-date">Date</label>
                <input type="date" class="form-control" id="refer-date" placeholder="11/12/2019" required>
            </div>
            <div class="form-group col-md-6">
                <label for="stud-grade">Weight Used</label>
                <input type="number" class="form-control" id="weight" placeholder="15" required>
            </div>
            <div class="form-group col-md-3">
                <label for="reps">Reps</label>
                <input type="number" class="form-control" id="weight" placeholder="35" required>
            </div>
            <div class="form-group col-md-3">
                <label for="unit">Unit</label><br>
                <label for="lbs">lbs <input type="radio" name="unit" value="true"></label>
                <label for="kg">kg <input type="radio" name="unit" value="false"></label>
            </div>
        </div>
        
        <button class="btn btn-info my-4 btn-block" id="submit" type="submit" onclick="">Submit</buttom>
    </form>
</div>
<hr>
<div>
    <table class="table">
        <thead>
            <th>#</th>
            <th>Name</th>
            <th>Date</th>
            <th>Weight Used</th>
            <th>Date</th>
            <th>Unit</th>
        </thead>
        <tbody>
            {{#each results}}
                <tr class="align-middle ref-{{this.id}}">
                    <th scope="row">{{inc @index}}</th>
                    <td class="name">{{this.name}}</td>
                    <td class="date">{{this.date}}</td>
                    <td class="weight">{{this.weight}}</td>
                    <td class="reps">{{this.weight}}</td>
                    <td class="unit">
                        {{#if this.unit}}
                            lbs
                        {{else}}
                            kg
                        {{/if}}
                    </td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>
